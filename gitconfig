[user]
	name = Mikkel Kjeldsen
	useConfigOnly = true
[credential]
	helper = cache
[push]
	default = simple
[color]
	ui = auto
[advice]
	pushNonFastForward = false
[alias]
	unstage = reset HEAD --
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	unpushed = log --branches --not --remotes --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	st = status
	ci = commit
	mb = checkout -b
	co = checkout
	dc = diff --cached
	mf = merge --no-ff
	sl = stash list
	rc = rebase --continue
	ri = rebase --interactive
	ca = commit --amend
	can = commit --amend --no-edit
	cleanorig = clean -f *.orig
	pr = pull --rebase --prune
	mt = mergetool
	b = branch --verbose
	force-push = push --force-with-lease --repo=
	quote = show -s --pretty=reference
	serve = !git daemon --verbose --export-all --base-path=.git --reuseaddr --strict-paths .git/
	cp = cherry-pick
	trailer-add = "!f() { GIT_EDITOR=\"git interpret-trailers --trailer='$1: $2' --in-place\" git commit --amend; } && f"
	trailer-fixes-commit = "!f() { git trailer-add Fixes \"$(git quote \"$1\")\"; } && f"
	trailer-references-url = "!f() { git trailer-add References \"$1\"; } && f"
	trailer-resolves-url = "!f() { git trailer-add Resolves \"$1\"; } && f"
[include]
	path = .git_local
[merge]
	tool = meld
[rerere]
	enabled = true
[diff]
	indentHeuristic = true
[core]
	untrackedCache = true
