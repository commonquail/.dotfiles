[push]
	default = simple
[color]
	ui = auto
[advice]
	pushNonFastForward = false
[alias]
	unstage = reset HEAD --
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	unpushed = log --branches --not --remotes --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	undo = reset --hard HEAD~1
	st = status
	ci = commit
	mb = checkout -b
	co = checkout
	dc = diff --cached
	mf = merge --no-ff --edit --gpg-sign
	ss = stash save
	sl = stash list
	rc = rebase --continue
	ri = rebase --interactive
	ca = commit --amend
	can = commit --amend --no-edit
	cleanorig = clean -f *.orig
	searchchange = log --pickaxe-regex -S
	searchdiff = log -G
	searchlog = log --grep
	pr = pull --rebase
	archive-branch = "!f() { git tag -a \"archive/$1\" \"$1\" -m \"archived branch: $1\" && git branch -D \"$1\"; } && f"
	ls-files-changed = diff --name-status
[include]
	path = .git_local
[merge]
	tool = meld
[pull]
	rebase = true
