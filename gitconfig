[user]
	name = Mikkel Kjeldsen
	useConfigOnly = true
[credential]
	helper = cache
[push]
	default = simple
[color]
	ui = auto
[advice]
	pushNonFastForward = false
[alias]
	unstage = reset HEAD --
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	unpushed = log --branches --not --remotes --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	st = status
	ci = commit
	mb = checkout -b
	co = checkout
	dc = diff --cached
	mf = merge --no-ff
	sl = stash list
	rc = rebase --continue
	ri = rebase --interactive
	ca = commit --amend
	can = commit --amend --no-edit
	cleanorig = clean -f *.orig
	pr = pull --rebase --prune
	mt = mergetool
	b = branch --verbose
	force-push = push --force-with-lease --repo=
	quote = show -s --date=short --pretty='format:%h (\"%s\", %ad)'
	serve = !git daemon --verbose --export-all --base-path=.git --reuseaddr --strict-paths .git/
	cp = cherry-pick
[include]
	path = .git_local
[merge]
	tool = meld
[rerere]
	enabled = true
[diff]
	indentHeuristic = true
[core]
	untrackedCache = true
